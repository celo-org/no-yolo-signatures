  "devDependencies": {
    "@celo/typescript": "0.0.1",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.0.1",
    "jest": "27.3.1",
    "ts-jest": "27.0.7",
    "typescript": "^4.4.4",
    "ts-node": "10.4.0"
